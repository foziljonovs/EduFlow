<Page x:Class="EduFlow.Desktop.Pages.MainForPage.TeacherNavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EduFlow.Desktop.Pages.MainForPage"
      mc:Ignorable="d"
      Title="TeacherNavigationPage"
      Loaded="Page_Loaded">

    <StackPanel>
        <RadioButton x:Name="MainButton"
                     Style="{DynamicResource MainButton}"
                     Click="MainButton_Click"
                     ToolTip="Asosiy sahifa"/>

        <RadioButton x:Name="StudentsButton"
                     Style="{DynamicResource StudentButton}"
                     Click="StudentsButton_Click"
                     ToolTip="O'quvchilar sahifasi"/>
    </StackPanel>
</Page>
