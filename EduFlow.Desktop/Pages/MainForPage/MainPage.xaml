<Page x:Class="EduFlow.Desktop.Pages.MainForPage.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EduFlow.Desktop.Pages.MainForPage" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:local1="clr-namespace:EduFlow.Desktop.Components.Loader"
      mc:Ignorable="d"
      Title="MainPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <DatePicker x:Name="dtStartDate"
                                materialDesign:HintAssist.Hint="Boshlanish sanasi"
                                Width="110"
                                VerticalAlignment="Center"
                                Margin="10 0 10 0"/>

                    <DatePicker x:Name="dtEndDate"
                                materialDesign:HintAssist.Hint="Tugash sanasini tanlang"
                                Width="110"
                                VerticalAlignment="Center"
                                Margin="10 0 10 0"
                                SelectedDateChanged="dtEndDate_SelectedDateChanged"/>

                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="categoryComboBox"
                                  ToolTip="Kategoriya tanlash"
                                  Width="110"
                                  VerticalAlignment="Center"
                                  Margin="10 0"
                                  SelectionChanged="categoryComboBox_SelectionChanged_1">
                        </ComboBox>

                        <Button x:Name="createCategoryBtn"
                                Style="{DynamicResource CrudButton}"
                                Tag="add"
                                Background="Gold"
                                ToolTip="Kategoriya qo'shish"
                                Click="createCategoryBtn_Click"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="courseComboBox"
                                  ToolTip="Kurslar tanlash"
                                  Width="110"
                                  VerticalAlignment="Center"
                                  Margin="10 0"
                                  SelectionChanged="categoryComboBox_SelectionChanged">
                        </ComboBox>

                        <Button x:Name="createCourseBtn"
                                Style="{DynamicResource CrudButton}"
                                Tag="groupadd"
                                Background="DeepSkyBlue"
                                ToolTip="Kurs qo'shish"
                                Click="createCourseBtn_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="teacherComboBox"
                                  ToolTip="O'qituvchi tanlash"
                                  Width="110"
                                  VerticalAlignment="Center"
                                  Margin="10 0"
                                  SelectionChanged="teacherComboBox_SelectionChanged">
                            <ComboBoxItem Content="Barcha" IsSelected="True" IsEnabled="False"/>
                        </ComboBox>

                        <Button x:Name="createTeacherBtn"
                                Style="{DynamicResource CrudButton}"
                                Tag="personadd"
                                Background="DarkSalmon"
                                ToolTip="O'qituvchi qo'shish"
                                Click="createTeacherBtn_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"
                  HorizontalAlignment="Left"
                  Width="700">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        CornerRadius="5"
                        BorderThickness="0"
                        Width="160"
                        Background="Tomato">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="YourCoursesCount"
                                   Text="0"
                                   Foreground="White"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   FontWeight="Heavy"/>

                        <TextBlock Text="Guruhlar soni"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontFamily="Jetbrains Mono"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1"
                        CornerRadius="5"
                        BorderThickness="0"
                        Width="160"
                        Background="DeepSkyBlue">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="YourStudentsCount"
                                   Text="0"
                                   Foreground="White"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   FontWeight="Heavy"/>

                        <TextBlock Text="O'quvchilar soni"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontFamily="Jetbrains Mono"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Margin="0 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                      Margin="3 0 18 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="No"
                               FontSize="12"
                               FontWeight="ExtraBold"
                               FontFamily="Jetbrains Mono"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                               Text="Guruh nomi"
                               FontSize="12"
                               FontWeight="ExtraBold"
                               FontFamily="Jetbrains Mono"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                               Text="O'quvchi soni"
                               FontSize="12"
                               FontWeight="ExtraBold"
                               FontFamily="Jetbrains Mono"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="3"
                               Text="Boshlangan sana"
                               FontSize="12"
                               FontFamily="Jetbrains Mono"
                               FontWeight="ExtraBold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>

                <Button Grid.Column="4"
                        x:Name="createGroupBtn"
                        Style="{DynamicResource CrudButton}"
                        Tag="add"
                        Background="MediumSeaGreen"
                        HorizontalAlignment="Right"
                        ToolTip="Guruh yaratish"
                        Click="createGroupBtn_Click"/>
            </Grid>

            <Grid Grid.Row="1">
                <local1:Loader x:Name="courseForLoader"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>

                <ScrollViewer>
                    <StackPanel x:Name="stCourses"/>
                </ScrollViewer>

                <TextBlock x:Name="emptyDataForCourse"
                           Text="Guruhlar topilmadi!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
