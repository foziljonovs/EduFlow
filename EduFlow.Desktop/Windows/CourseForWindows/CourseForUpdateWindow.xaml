<Window x:Class="EduFlow.Desktop.Windows.CourseForWindows.CourseForUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.CourseForWindows"
        mc:Ignorable="d"
        Title="CourseForUpdateWindow" 
        Height="420"
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="Kursni tahrirlash"
                       FontSize="18"
                       Margin="10 0"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <RadioButton x:Name="CloseBtn"
                         Style="{DynamicResource StateButton}"
                         Tag="Close"
                         HorizontalAlignment="Right"
                         Click="CloseBtn_Click"/>
        </Grid>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    Margin="10 0">
            <TextBlock Text="Nomi"
                       FontSize="13"
                       Margin="10 0 0 0"
                       Foreground="Gray"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <TextBox x:Name="nameTxt"
                     Style="{DynamicResource CustomTextBoxStyle}"
                     FontWeight="SemiBold"/>

            <TextBlock Text="Narxi"
                       FontSize="13"
                       Margin="10 0 0 0"
                       Foreground="Gray"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <TextBox x:Name="priceTxt"
                     Style="{DynamicResource CustomTextBoxStyle}"
                     FontWeight="SemiBold"/>

            <ComboBox x:Name="termComboBox"
                      Margin="0 5 0 0"
                      FontSize="18"
                      FontFamily="Jetbrains Mono"
                      FontWeight="SemiBold"
                      Padding="5 3"
                      ToolTip="Muddatini tanlash">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
            </ComboBox>

            <ComboBox x:Name="statusComboBox"
                      Margin="0 15 0 0"
                      FontSize="18"
                      FontFamily="Jetbrains Mono"
                      FontWeight="SemiBold"
                      Padding="5 3"
                      ToolTip="Holatini tanlash">
                <ComboBoxItem Content="Faol"/>
                <ComboBoxItem Content="Saqlangan"/>
            </ComboBox>


            <ComboBox x:Name="categoryComboBox"
                      Margin="0 15"
                      FontSize="18"
                      FontFamily="Jetbrains Mono"
                      FontWeight="SemiBold"
                      Padding="5 3"
                      ToolTip="Kategoriya tanlash">
            </ComboBox>

            <Button x:Name="SaveBtn"
                    Style="{DynamicResource saveButton}"
                    Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
