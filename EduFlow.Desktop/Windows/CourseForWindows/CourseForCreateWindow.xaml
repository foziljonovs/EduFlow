<Window x:Class="EduFlow.Desktop.Windows.CourseForWindows.CourseForCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.CourseForWindows"
        mc:Ignorable="d"
        Title="CourseForCreateWindow"
        Height="420"
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="Kurs yaratish"
                       FontSize="18"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <RadioButton x:Name="CloseBtn"
                         Style="{DynamicResource StateButton}"
                         Tag="Close"
                         HorizontalAlignment="Right"
                         Click="CloseBtn_Click"/>
        </Grid>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center">
            <TextBlock Text="Nomi"
                       FontSize="16"
                       Margin="10 0 10 5"
                       Foreground="Black"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <Border CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#FFCCCCCC"
                    Height="45">
                <TextBox x:Name="nameTxt"
                         FontSize="18"
                         FontFamily="Jetbrains Mono"
                         FontWeight="SemiBold"
                         Margin="10 5"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"/>
            </Border>
            
            <TextBlock Text="Narxi"
                       FontSize="16"
                       Margin="10 10 10 5"
                       Foreground="Black"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <Border CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#FFCCCCCC"
                    Height="45">
                <TextBox x:Name="priceTxt"
                         FontSize="18"
                         FontFamily="Jetbrains Mono"
                         FontWeight="SemiBold"
                         Margin="10 5"
                         BorderThickness="0"
                         PreviewTextInput="priceTxt_PreviewTextInput"
                         VerticalContentAlignment="Center"/>
            </Border>

            <ComboBox Margin="0 15 0 0"
                      FontSize="18"
                      FontFamily="Jetbrains Mono"
                      FontWeight="SemiBold"
                      Padding="5 3">
                <ComboBoxItem Content="Muddat" IsSelected="True" IsEnabled="False"/>
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
            </ComboBox>
            
            <ComboBox Margin="0 15 0 0"
                      FontSize="18"
                      FontFamily="Jetbrains Mono"
                      FontWeight="SemiBold"
                      Padding="5 3">
                <ComboBoxItem Content="Holat" IsSelected="True" IsEnabled="False"/>
                <ComboBoxItem Content="Faol"/>
                <ComboBoxItem Content="Saqlangan"/>
            </ComboBox>


            <ComboBox Margin="0 15"
                      FontSize="18"
                      FontFamily="Jetbrains Mono"
                      FontWeight="SemiBold"
                      Padding="5 3">
                <ComboBoxItem Content="Kategoriya" IsSelected="True" IsEnabled="False"/>
            </ComboBox>

            <Button x:Name="SaveBtn"
                    Style="{DynamicResource saveButton}"/>
        </StackPanel>
    </Grid>
</Window>
