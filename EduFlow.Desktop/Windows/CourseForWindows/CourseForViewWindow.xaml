<Window x:Class="EduFlow.Desktop.Windows.CourseForWindows.CourseForViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.CourseForWindows" xmlns:local1="clr-namespace:EduFlow.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="CourseForViewWindow" 
        Height="600"
        Width="1024"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Kurs malumotlari"
                   FontFamily="Jetbrains Mono"
                   FontWeight="Bold"
                   FontSize="22"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Width="115">

                <RadioButton x:Name="MinButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ChevronDown"
                             ToolTip="Yashirish"
                             Click="MinButton_Click"/>

                <RadioButton x:Name="NormalButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ArrowCollapse"
                             ToolTip="Oddiy holat"
                             Click="NormalButton_Click"/>

                <RadioButton x:Name="MaxButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ArrowExpand"
                             ToolTip="Kattalashtirish"
                             Click="MaxButton_Click"/>

                <RadioButton x:Name="CloseBtn"
                             Style="{DynamicResource StateButton}"
                             Tag="Close"
                             ToolTip="Yopish"
                             Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="Nomi: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbName"
                           Content="Foundation"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Label Content="Narxi: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbPrice"
                           Content="400000"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Label Content="Muddati: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbTerm"
                           Content="3 oy"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>                    
                </Grid>

                <Grid Grid.Row="3">
                    <Label Content="Xolati: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbStatus"
                           Content="Faol"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>                    
                </Grid>

                <Grid Grid.Row="4">
                    <Label Content="Kategoriya: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbCategory"
                           Content="Dasturlash"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>                    
                </Grid>

                <Grid Grid.Row="5">
                    <local1:Loader x:Name="loaderForTeacher"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>

                    <ScrollViewer Margin="5 5 5 10">
                        <StackPanel x:Name="stTeachers"/>
                    </ScrollViewer>

                    <TextBlock x:Name="emptyDataForTeacher"
                               Text="O'qituvchilar topilmadi!"
                                FontSize="14"
                                FontFamily="Jetbrains Mono"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Border Margin="5 10"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="Gray">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
