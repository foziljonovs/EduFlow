<Window x:Class="EduFlow.Desktop.Windows.CourseForWindows.CourseForViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.CourseForWindows" xmlns:local1="clr-namespace:EduFlow.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="CourseForViewWindow" 
        Height="600"
        Width="1024"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Kurs malumotlari"
                   FontFamily="Jetbrains Mono"
                   FontWeight="Bold"
                   FontSize="22"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Width="90">

                <RadioButton x:Name="MinButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ChevronDown"
                             ToolTip="Yashirish"
                             Click="MinButton_Click"/>

                <StackPanel VerticalAlignment="Center">
                    <RadioButton x:Name="NormalButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowCollapse"
                                 ToolTip="Oddiy holat"
                                 Visibility="Collapsed"
                                 Click="NormalButton_Click"/>

                    <RadioButton x:Name="MaxButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowExpand"
                                 ToolTip="Kattalashtirish"
                                 Click="MaxButton_Click"/>
                </StackPanel>

                <RadioButton x:Name="CloseBtn"
                             Style="{DynamicResource StateButton}"
                             Tag="Close"
                             ToolTip="Yopish"
                             Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="Nomi: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbName"
                           Content="Foundation"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Label Content="Narxi: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbPrice"
                           Content="400000"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Label Content="Muddati: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbTerm"
                           Content="3 oy"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>                    
                </Grid>

                <Grid Grid.Row="3">
                    <Label Content="Xolati: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbStatus"
                           Content="Faol"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>                    
                </Grid>

                <Grid Grid.Row="4">
                    <Label Content="Kategoriya: "
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                    <Label x:Name="tbCategory"
                           Content="Dasturlash"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           FontSize="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>                    
                </Grid>

                <Grid Grid.Row="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="O'qituvchilar"
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <Grid Grid.Row="1">
                        <local1:Loader x:Name="loaderForTeacher"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>

                        <ScrollViewer Margin="5 5 5 10">
                            <StackPanel x:Name="stTeachers"
                                        ToolTip="O'qituvchilar"/>
                        </ScrollViewer>

                        <TextBlock x:Name="emptyDataForTeacher"
                                   Text="O'qituvchilar topilmadi!"
                                    FontSize="14"
                                    FontFamily="Jetbrains Mono"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed"/>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Border Margin="5 10"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="Gray">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0 0 18 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="No"
                                       FontFamily="Jetbrains Mono"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1"
                                        Text="Nomi"
                                        FontFamily="Jetbrains Mono"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="2"
                                        Text="O'qituvchi"
                                        FontFamily="Jetbrains Mono"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="3"
                                        Text="O'quvchilar"
                                        FontFamily="Jetbrains Mono"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="4"
                                        Text="Xolati"
                                        FontFamily="Jetbrains Mono"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <local1:Loader x:Name="groupForLoader"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>

                            <ScrollViewer>
                                <StackPanel x:Name="stGroups"
                                            ToolTip="Guruhlar"/>
                            </ScrollViewer>


                            <TextBlock x:Name="emptyDataForGroup"
                                       Text="Guruhlar topilmadi!"
                                        FontSize="14"
                                        FontFamily="Jetbrains Mono"
                                        FontWeight="SemiBold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
