<Window x:Class="EduFlow.Desktop.Windows.TeacherForWindows.TeacherForViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.TeacherForWindows" xmlns:local1="clr-namespace:EduFlow.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="TeacherForViewWindow" 
        Height="600"
        Width="1024"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="O'qituvchi malumotlari"
                   FontFamily="Jetbrains Mono"
                   FontSize="22"
                   FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal"
                        Width="90"
                        HorizontalAlignment="Right">
                <RadioButton x:Name="MinButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ChevronDown"
                             ToolTip="Yashirish"
                             Click="MinButton_Click"/>

                <StackPanel VerticalAlignment="Center">
                    <RadioButton x:Name="NormalButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowCollapse"
                                 ToolTip="Oddiy holat"
                                 Visibility="Collapsed"
                                 Click="NormalButton_Click"/>

                    <RadioButton x:Name="MaxButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowExpand"
                                 ToolTip="Kattalashtirish"
                                 Click="MaxButton_Click"/>
                </StackPanel>

                <RadioButton x:Name="CloseBtn"
                             Style="{DynamicResource StateButton}"
                             Tag="Close"
                             ToolTip="Yopish"
                             Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Grid Height="50">
                    <TextBlock Text="Ism: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="tbName"
                               Text="Abdulvosid Foziljonov"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Telefon raqam: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="tbPhoneNumber"
                               Text="+998945666964"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Ko'nikmalar: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="tbSkills"
                               Text="C#, .NET, Web, Desktop"
                               FontSize="14"
                               Width="120"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Kurs: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="tbCourseName"
                               Text="Foundation"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Shu oydagi tushum: "
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="tbSalary"
                               Text="0"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Border x:Name="teacherForPasswordEditBtn"
                        Height="30"
                        Width="140"
                        Background="DeepSkyBlue"
                        CornerRadius="5"
                        HorizontalAlignment="Left">
                    <Label Content="Parolni o'zgartirish"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Jetbrains Mono"
                           Foreground="White"/>
                </Border>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <DatePicker x:Name="startedDate"
                                    Width="110"
                                    VerticalAlignment="Center"
                                    Margin="10 0"
                                    ToolTip="Boshlanish sanasi"/>

                        <DatePicker x:Name="endDate"
                                    Width="110"
                                    VerticalAlignment="Center"
                                    Margin="10 0 0 0"
                                    ToolTip="Tugash sanasi"
                                    SelectedDateChanged="endDate_SelectedDateChanged"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1"
                        Margin="5 5 0 5"
                        CornerRadius="5"
                        BorderThickness="1"
                        BorderBrush="Gray">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Margin="8 0 23 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="No"
                                       FontSize="12"
                                       FontFamily="Jetbrains Mono"
                                       FontWeight="ExtraBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1"
                                        Text="Nomi"
                                        FontSize="12"
                                        FontFamily="Jetbrains Mono"
                                        FontWeight="ExtraBold"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="2"
                                        Text="O'quvchilar"
                                        FontSize="12"
                                        FontFamily="Jetbrains Mono"
                                        FontWeight="ExtraBold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="3"
                                        Text="Holati"
                                        FontSize="12"
                                        FontFamily="Jetbrains Mono"
                                        FontWeight="ExtraBold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="1"
                              Margin="5 0 5 5">
                            <TextBlock x:Name="groupForEmptyData"
                                       Text="Guruhlar topilmadi!"
                                       FontSize="14"
                                       FontFamily="Jetbrains Mono"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>

                            <ScrollViewer>
                                <StackPanel x:Name="stGroups"/>
                            </ScrollViewer>

                            <local1:Loader x:Name="groupsForLoader"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
