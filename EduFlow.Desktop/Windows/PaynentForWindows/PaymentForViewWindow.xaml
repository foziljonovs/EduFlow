<Window x:Class="EduFlow.Desktop.Windows.PaynentForWindows.PaymentForViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.PaynentForWindows" xmlns:local1="clr-namespace:EduFlow.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="PaymentForViewWindow" 
        Height="600"
        Width="1024"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="To'lovlar malumotlari"
                   FontFamily="Jetbrains Mono"
                   FontSize="22"
                   FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal"
                        Width="90"
                        HorizontalAlignment="Right">
                <RadioButton x:Name="MinButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ChevronDown"
                             ToolTip="Yashirish"
                             Click="MinButton_Click"/>

                <StackPanel VerticalAlignment="Center">
                    <RadioButton x:Name="NormalButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowCollapse"
                                 ToolTip="Oddiy holat"
                                 Visibility="Collapsed"
                                 Click="NormalButton_Click"/>

                    <RadioButton x:Name="MaxButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowExpand"
                                 ToolTip="Kattalashtirish"
                                 Click="MaxButton_Click"/>
                </StackPanel>

                <RadioButton x:Name="CloseBtn"
                             Style="{DynamicResource StateButton}"
                             Tag="Close"
                             ToolTip="Yopish"
                             Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <DatePicker x:Name="dtStartDate"
                            Width="110"
                            VerticalAlignment="Center"
                            ToolTip="Sanadan"
                            Margin="10 0 10 0"/>

                <DatePicker x:Name="dtEndDate"
                            Width="110"
                            VerticalAlignment="Center"
                            Margin="10 0 10 0"
                            ToolTip="Sanagacha"
                            SelectedDateChanged="dtEndDate_SelectedDateChanged"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <TextBlock Text="Jami summa: "
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbAllPaymentAmount"
                           Text="0"
                           FontSize="16"
                           FontFamily="Jetbrains Mono"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2"
              Margin="3 0 21 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="No"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Text="O'quvchi ismi"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="2"
                       Text="Summa"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                       Text="Chegirma"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="4"
                       Text="Holati"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="5"
                       Text="Turi"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="6"
                       Text="Sana"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="3">
            <local1:Loader x:Name="paymentLoader"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

            <ScrollViewer Margin="0 5">
                <StackPanel x:Name="stPayments"/>
            </ScrollViewer>

            <TextBlock x:Name="emptyDataForPayment"
                       Text="To'lovlar topilmadi!"
                       FontSize="14"
                       FontWeight="SemiBold"
                       FontFamily="Jetbrains Mono"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
