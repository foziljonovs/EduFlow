<Window x:Class="EduFlow.Desktop.Windows.GroupForWindows.GroupForViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.GroupForWindows"
        mc:Ignorable="d"
        Title="GroupForViewWindow" 
        Height="450"
        Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Guruh malumotlari"
                   FontFamily="Jetbrains Mono"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal"
                        Width="115"
                        HorizontalAlignment="Right">
                <RadioButton x:Name="MinButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ChevronDown"
                             ToolTip="Yashirish"/>

                <RadioButton x:Name="NormalButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ArrowCollapse"
                             ToolTip="Oddiy holat"/>

                <RadioButton x:Name="MaxButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ArrowExpand"
                             ToolTip="Kattalashtirish"/>

                <RadioButton x:Name="CloseBtn"
                             Style="{DynamicResource StateButton}"
                             Tag="Close"
                             ToolTip="Yopish"
                             Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Grid Height="50">
                    <TextBlock Text="Nomi: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="nameTxt"
                               Text="Foundation 22.04.25"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="O'qituvchi: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="teacherNameTxt"
                               Text="Abdulvosid Foziljonov"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Holati: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="statusTxt"
                               Text="Faol"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="To'lov tarixi: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <Border x:Name="paymentHistoryBtn"
                            Width="80"
                            Height="30"
                            CornerRadius="5"
                            Background="DeepSkyBlue"
                            HorizontalAlignment="Right">
                        <Label Content="Ko'rish"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="DemiBold"/>
                    </Border>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Boshlangan sana: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="statedDateTxt"
                               Text="22.04.25"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <Grid Grid.Column="1"
                  Margin="10 0 0 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="O'quvchilar soni: "
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="studentCountTbc"
                               Text="12"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               Margin="5 0 10 0"/>

                    <Button x:Name="createLessonBtn"
                            Style="{DynamicResource CrudButton}"
                            Tag="add"
                            Background="MediumSeaGreen"/>
                </StackPanel>

                <Border Grid.Row="1"
                        CornerRadius="5"
                        BorderBrush="Gray"
                        BorderThickness="1">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    x:Name="stStudents">

                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    x:Name="stLessons">

                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="2">
                    <Button x:Name="saveButton"
                            Style="{DynamicResource saveButton}"
                            Height="30"
                            Width="100"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
