<Window x:Class="EduFlow.Desktop.Windows.GroupForWindows.GroupForViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.GroupForWindows" xmlns:local1="clr-namespace:EduFlow.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="GroupForViewWindow" 
        Height="600"
        Width="1024"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Guruh malumotlari"
                   FontFamily="Jetbrains Mono"
                   FontSize="22"
                   FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal"
                        Width="90"
                        HorizontalAlignment="Right">
                <RadioButton x:Name="MinButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ChevronDown"
                             ToolTip="Yashirish"
                             Click="MinButton_Click"/>

                <StackPanel VerticalAlignment="Center">
                    <RadioButton x:Name="NormalButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowCollapse"
                                 ToolTip="Oddiy holat"
                                 Visibility="Collapsed"
                                 Click="NormalButton_Click"/>

                    <RadioButton x:Name="MaxButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowExpand"
                                 ToolTip="Kattalashtirish"
                                 Click="MaxButton_Click"/>
                </StackPanel>

                <RadioButton x:Name="CloseBtn"
                             Style="{DynamicResource StateButton}"
                             Tag="Close"
                             ToolTip="Yopish"
                             Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Grid Height="50">
                    <TextBlock Text="Nomi: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="nameTxt"
                               Text="Foundation 22.04.25"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="O'qituvchi: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="teacherNameTxt"
                               Text="Abdulvosid Foziljonov"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Holati: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="statusTxt"
                               Text="Faol"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="To'lov tarixi: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <Border x:Name="paymentHistoryBtn"
                            Width="80"
                            Height="30"
                            CornerRadius="5"
                            Background="DeepSkyBlue"
                            ToolTip="Guruh to'lovlarini ko'rish"
                            HorizontalAlignment="Right">
                        <Label Content="Ko'rish"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="DemiBold"/>
                    </Border>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Boshlangan sana: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="statedDateTxt"
                               Text="22.04.25"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <Grid Grid.Column="1"
                  Margin="10 0 0 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="O'quvchilar soni: "
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="studentCountTbc"
                               Text="12"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               Margin="5 0 20 0"/>

                    <TextBlock Text="Darslar soni: "
                                FontSize="14"
                                FontFamily="Jetbrains Mono"
                                FontWeight="SemiBold"
                                VerticalAlignment="Center"/>

                    <TextBlock x:Name="lessonCountTbc"
                                Text="12"
                                FontSize="14"
                                FontFamily="Jetbrains Mono"
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                Margin="5 0 20 0"/>

                    <Border x:Name="addStudents"
                            Height="30"
                            Width="120"
                            CornerRadius="8"
                            Background="MediumSeaGreen"
                            ToolTip="Guruhga o'quvchi qo'shish"
                            MouseDown="addStudents_MouseDown">
                        <Label Content="O'quvchi qo'shish"
                               Foreground="White"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <Border Grid.Row="1"
                        CornerRadius="5"
                        BorderBrush="Gray"
                        BorderThickness="1">
                    <Grid Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                                   Text="No"
                                                   FontSize="14"
                                                   FontFamily="Jetbrains Mono"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1"
                                                   Text="FISH"
                                                   FontSize="14"
                                                   FontFamily="Jetbrains Mono"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <TextBlock Text="Darslar"
                                                   FontSize="14"
                                                   FontFamily="Jetbrains Mono"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>


                                    <Button x:Name="createLessonBtn"
                                            Style="{DynamicResource CrudButton}"
                                            Tag="add"
                                            ToolTip="Dars yaratish"
                                            Background="MediumSeaGreen"
                                            HorizontalAlignment="Right"
                                            Click="createLessonBtn_Click"/>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="1"
                                  Margin="0 5">
                                <ScrollViewer>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <local1:Loader x:Name="studentLoader"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Visibility="Collapsed"/>

                                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                                          VerticalScrollBarVisibility="Disabled"
                                                          Margin="5 3">
                                                <StackPanel x:Name="stStudents"/>
                                            </ScrollViewer>

                                                <TextBlock x:Name="emptyDataForStudent"
                                                           Text="O'quvchilar topilmadi!"
                                                           FontSize="14"
                                                           FontFamily="Jetbrains Mono"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <local1:Loader x:Name="lessonLoader"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Visibility="Collapsed"/>

                                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                                          VerticalScrollBarVisibility="Disabled"
                                                          Margin="5 3">
                                                <StackPanel x:Name="stLessons"
                                                            Orientation="Horizontal"/>
                                            </ScrollViewer>

                                            <TextBlock x:Name="emptyDataForLesson"
                                                           Text="Darslar topilmadi!"
                                                           FontSize="14"
                                                           FontFamily="Jetbrains Mono"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"/>
                                        </Grid>
                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <Grid Grid.Row="2">
                    <Button x:Name="saveButton"
                            Style="{DynamicResource saveButton}"
                            Height="30"
                            Width="100"
                            ToolTip="Ma'lumotlarni saqlash"
                            HorizontalAlignment="Right"
                            Click="saveButton_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
