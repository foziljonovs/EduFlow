<Window x:Class="EduFlow.Desktop.Windows.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows"
        mc:Ignorable="d"
        Height="200" 
        Topmost="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Width="300"
        Loaded="Window_Loaded">
    <Border
        CornerRadius="5"
        BorderBrush="Black"
        BorderThickness="1"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border
                Name="Header_Border"
                CornerRadius="5"
                Background="#1710ED"
                Grid.Row="0">
                <Grid
                    HorizontalAlignment="Center">
                    <Label
                        Name="lbl_Text_Title"
                        Foreground="White"
                        FontSize="20"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>

                    <Button
                        Name="close_Btn"
                        Click="close_Btn_Click"
                        Height="25"
                        Margin="250 0 0 0"
                        Style="{DynamicResource ClosedButton}"
                        HorizontalAlignment="Right"/>

                </Grid>
            </Border>

            <Label
                Name="txtMessage"
                Grid.Row="1"
                FontSize="16"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Content="Ilovadan chiqmoqchimisiz?"/>

            <Grid
                Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button
                    Name="ok_Btn"
                    Click="ok_Btn_Click"
                    Grid.Column="0"
                    Margin="0 0 20 0"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Style="{DynamicResource MainButtonThree}"
                    Content="Ha"/>

                <Button
                    Name="cancel_Btn"
                    Click="cancel_Btn_Click"
                    Grid.Column="1"
                    Margin="20 0 0 0"
                    FontSize="16"
                    HorizontalAlignment="Left"
                    Style="{DynamicResource MainButtonThree}"
                    Content="Bekor qilish"/>

                <Button
                    Name="yes_Btn"
                    Click="yes_Btn_Click"
                    Grid.Column="0"
                    Margin="0 0 20 0"
                    FontSize="16"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource MainButtonThree}"
                    Content="Ha"/>

                <Button
                    Name="no_Btn"
                    Click="no_Btn_Click"
                    Grid.Column="1"
                    Margin="20 0 0 0"
                    FontSize="16"
                    HorizontalAlignment="Left"
                    Style="{DynamicResource MainButtonThree}"
                    Content="Yo'q"/>

                <Button
                    Name="retry_Btn"
                    Click="retry_Btn_Click"
                    Grid.Column="0"
                    Margin="0 0 20 0"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Style="{DynamicResource MainButtonThree}"
                    Content="Qayta urinish"/>
            </Grid>
        </Grid>
    </Border>
</Window>
