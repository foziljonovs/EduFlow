<Window x:Class="EduFlow.Desktop.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="EduFlow - dashboard"
        Height="600" 
        Width="1024"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        WindowStyle="None"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon
                    Kind="SchoolOutline"
                    Height="40"
                    Width="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="Edu Flow"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="10"
                           VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Row="1"
                        Margin="0 10">
                <RadioButton x:Name="MainButton"
                        Style="{DynamicResource MainButton}"
                        Click="MainButton_Click"/>

                <RadioButton x:Name="CoursesButton"
                        Style="{DynamicResource CourseButton}"
                        Click="CoursesButton_Click"/>
            </StackPanel>

            <Button x:Name="CloseBtn"
                    Grid.Row="3"
                    Style="{DynamicResource MainCloseButton}"
                    Click="CloseBtn_Click"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid>
                <StackPanel Orientation="Horizontal"
                            Margin="10 0"
                            Width="85"
                            HorizontalAlignment="Right">
                    <RadioButton x:Name="MinButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ChevronDown"
                                 ToolTip="Minimize"
                                 Click="MinButton_Click"/>

                    <RadioButton x:Name="NormalButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowCollapse"
                                 ToolTip="Restore"
                                 Click="NormalButton_Click"/>

                    <RadioButton x:Name="MaxButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowExpand"
                                 ToolTip="Maximize"
                                 Click="MaxButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
