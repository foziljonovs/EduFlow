<Window x:Class="EduFlow.Desktop.Windows.StudentForWindows.StudentForCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Desktop.Windows.StudentForWindows"
        mc:Ignorable="d"
        Title="StudentForCreateWindow"
        Height="410" 
        Width="450"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="O'quvchini ro'yxatga olish"
                       FontSize="20"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="10 0 0 0"/>

            <RadioButton x:Name="closeBtn" 
                         Style="{DynamicResource StateButton}"
                         Tag="close"
                         HorizontalAlignment="Right"
                         Click="closeBtn_Click"/>
        </Grid>

        <StackPanel Grid.Row="1"
                    Margin="10 10">
            <TextBlock Text="To'liq ism"
                       FontSize="13"
                       Foreground="Gray"
                       FontWeight="Medium"
                       Margin="10 0"/>
            <TextBox x:Name="fullNameTxt"
                     Style="{DynamicResource CustomTextBoxStyle}"
                     FontWeight="SemiBold"/>


            <TextBlock Text="Yosh"
                       FontSize="13"
                       Foreground="Gray"
                       FontWeight="Medium"
                       Margin="10 0"/>
            <ComboBox x:Name="AgeComboBox"
                      Height="40"
                      FontSize="18"
                      FontFamily="Jetbrains Mono"
                      FontWeight="SemiBold"
                      Margin="0 5 0 10"/>

            <TextBlock Text="Yashash manzil"
                       FontSize="13"
                       Foreground="Gray"
                       FontWeight="Medium"
                       Margin="10 0"/>
            <TextBox x:Name="addressTxt"
                     Style="{DynamicResource CustomTextBoxStyle}"
                     FontWeight="SemiBold"/>
            
            <TextBlock Text="Telefon raqam"
                       FontSize="13"
                       Foreground="Gray"
                       FontWeight="Medium"
                       Margin="10 0"/>
            <TextBox x:Name="phoneNumberTxt"
                     Style="{DynamicResource CustomTextBoxStyle}"
                     FontWeight="SemiBold"/>

            <Button x:Name="saveBtn"
                    Style="{DynamicResource saveButton}"/>
        </StackPanel>
    </Grid>
</Window>
