<UserControl x:Class="EduFlow.Desktop.Components.GroupForComponents.GroupForMinComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduFlow.Desktop.Components.GroupForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border CornerRadius="5"
            Margin="3 5 3 0"
            BorderThickness="1"
            BorderBrush="Gray"
            ToolTip="Guruh malumotlari">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       x:Name="tbNumber"
                       Text="1"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       x:Name="tbName"
                       Text="Foundation 02.05.2025"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="2"
                       x:Name="tbTeacher"
                        Text="Abdulvosid Foziljonov"
                        FontSize="14"
                        FontFamily="Jetbrains Mono"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                          x:Name="tbStudentCount"
                          Text="15"
                          FontSize="14"
                          FontFamily="Jetbrains Mono"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

            <TextBlock Grid.Column="4"
                       x:Name="tbStatus"
                        Text="18"
                        FontSize="14"
                        FontFamily="Jetbrains Mono"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
