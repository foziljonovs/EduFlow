<UserControl x:Class="EduFlow.Desktop.Components.GroupForComponents.GroupForComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduFlow.Desktop.Components.GroupForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border Margin="3 5 3 0"    
            CornerRadius="5"
            BorderThickness="1"
            BorderBrush="Gray">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       x:Name="tbNumber"
                       Text="1"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       x:Name="tbName"
                       Text="Founadtion 1"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="2"
                       x:Name="tbCourse"
                       Text="Foundation"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                       x:Name="tbTeacher"
                       Text="Abdulvosid"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="4"
                       x:Name="tbStudentCount"
                       Text="12"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="5"
                       x:Name="tbStatus"
                       Text="Faol"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="6"
                       x:Name="tbStartedDate"
                       Text="2025-04-11"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <StackPanel Grid.Column="7"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="ViewButton"
                        Style="{DynamicResource CrudButton}"
                        Tag="Eye"
                        Background="DeepSkyBlue"
                        ToolTip="Guruhni ko'rish"/>

                <Button x:Name="EditButton"
                        Style="{DynamicResource CrudButton}"
                        Tag="Edit"
                        Background="Gold"
                        ToolTip="Guruhni tahrirlash"/>

                <Button x:Name="DeleteButton"
                        Style="{DynamicResource CrudButton}"
                        Tag="Delete"
                        Background="Tomato"
                        ToolTip="Guruhni o'chirish"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
