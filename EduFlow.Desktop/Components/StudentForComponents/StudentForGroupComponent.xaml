<UserControl x:Class="EduFlow.Desktop.Components.StudentForComponents.StudentForGroupComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduFlow.Desktop.Components.StudentForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border CornerRadius="5"
            BorderThickness="1"
            BorderBrush="Gray"
            Margin="3 5 3 0"
            MouseDown="Border_MouseDown"
            ToolTip="O'quvchi malumotlari">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       x:Name="tbNumber"
                       Text="1"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       x:Name="tbFullname"
                       Text="Abdulaziz Hikmatov"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="2"
                       x:Name="tbAge"
                       Text="17"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                       x:Name="tbAddress"
                       Text="Marg'ilon"
                       FontFamily="Jetbrains Mono"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="4"
                       x:Name="tbPhoneNumber"
                       Text="+998909000909"
                       FontFamily="Jetbrains Mono"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="5"
                       x:Name="tbStatus"
                       Text="Faol emas"
                       FontFamily="Jetbrains Mono"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <CheckBox Grid.Column="6"
                      x:Name="ChooseStudent"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      BorderThickness="0"
                      Background="Transparent"
                      IsChecked="False"
                      Checked="ChooseStudent_Checked"
                      Unchecked="ChooseStudent_Unchecked"/>
        </Grid>
    </Border>
</UserControl>
