<UserControl x:Class="EduFlow.Desktop.Components.StudentForComponents.StudentForComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduFlow.Desktop.Components.StudentForComponents"
             mc:Ignorable="d"
             Height="45">
    <Border Margin="3 5 3 0"
            CornerRadius="5"
            BorderThickness="1"
            BorderBrush="Gray"
            ToolTip="O'quvchi malumotlari">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       x:Name="tbNumber"
                       Text="0"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       x:Name="tbFullname"
                       Text="Abdulaziz Hikmatov"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="2"
                       x:Name="tbAge"
                       Text="17"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                       x:Name="tbAddress"
                       Text="Marg'ilon"
                       FontFamily="Jetbrains Mono"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="4"
                       x:Name="tbPhoneNumber"
                       Text="+998909000909"
                       FontFamily="Jetbrains Mono"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="5"
                       x:Name="tbCourse"
                       Text="AKT Pro - 1"
                       FontFamily="Jetbrains Mono"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <StackPanel Grid.Column="6"
                        Orientation="Horizontal">
                <Button x:Name="ViewBtn"
                        Style="{DynamicResource CrudButton}"
                        Tag="Eye"
                        Background="DeepSkyBlue"/>

                <Button x:Name="EditBtn"
                        Style="{DynamicResource CrudButton}"
                        Tag="pencil"
                        Background="Gold"/>

                <Button x:Name="DeleteBtn"
                        Style="{DynamicResource CrudButton}"
                        Tag="trashCan"
                        Background="Tomato"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
