<UserControl x:Class="EduFlow.Desktop.Components.LessonForComponents.LessonForAttendanceComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduFlow.Desktop.Components.LessonForComponents" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Width="100"
             Loaded="UserControl_Loaded">
    <Border CornerRadius="5"
            BorderThickness="1"
            BorderBrush="Gray"
            Margin="4 0">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="mnDelete"
                              Header="O'chirish"
                              Click="mnDelete_Click">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Delete"
                                                     Width="16"
                                                     Height="16"
                                                     Foreground="Tomato"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem x:Name="mnUpdate"
                              Header="Tahrirlash">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Pencil"
                                                     Width="16"
                                                     Height="16"
                                                     Foreground="DodgerBlue"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
            
            <StackPanel Grid.Row="0"
                        x:Name="stAttendances"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1"
                       x:Name="tbNumber"
                       Text="1"
                       FontSize="18"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Row="2"
                       x:Name="tbDate"
                       Text="29/04/2025"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
