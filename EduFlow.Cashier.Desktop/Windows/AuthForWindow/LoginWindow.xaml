<Window x:Class="EduFlow.Cashier.Desktop.Windows.AuthForWindow.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:EduFlow.Cashier.Desktop.Windows.AuthForWindow" 
        xmlns:local1="clr-namespace:EduFlow.Cashier.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="500"
        Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <RadioButton x:Name="CloseBtn"
                     Grid.Row="0"
                     Margin="0 0 10 0"
                     Style="{DynamicResource StateButton}"
                     Tag="Close"
                     HorizontalAlignment="Right"/>

        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Image Source="/Assets/cashier.webp"
                           Width="300"
                           Height="300"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="1">
                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Center"
                                Margin="20 0">
                        <TextBlock Text="Tizimga kirish"
                                   FontSize="26"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 20"
                                   FontWeight="SemiBold"
                                   FontFamily="Jetbrains Mono"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0"
                                        VerticalAlignment="Center">
                                <TextBox x:Name="PhoneNumberTxt"
                                         Style="{DynamicResource PhoneNumberTextBoxStyle}"
                                         materialDesign:HintAssist.Hint ="Telefon raqam..."
                                         MaxLength="13"
                                         Text="+998"
                                         FontWeight="SemiBold"
                                         materialDesign:HintAssist.IsFloating="true"/>

                                <PasswordBox x:Name="PasswordPwd"
                                             Style="{DynamicResource PasswordTextBoxStyle}"
                                             materialDesign:HintAssist.Hint="Parol..."
                                             FontWeight="SemiBold"
                                             MaxLength="8"
                                             materialDesign:HintAssist.IsFloating="True"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                        Margin="0 10">
                                <Button x:Name="LoginBtn"
                                        Height="50"
                                        Style="{DynamicResource MainButtonTwo}"/>

                                <!--<local1:Loader x:Name="LoginLoader"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="Collapsed"/>-->
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <TextBlock Text="Edu Flow Cashier v1.0.0 | Yaratuvchi Abdulvosid Foziljonov"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Margin="10 0 10 0"
                       FontWeight="SemiBold"
                       FontFamily="Jetbrains Mono"/>
        </StackPanel>
    </Grid>
</Window>
