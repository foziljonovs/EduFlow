<Window x:Class="EduFlow.Cashier.Desktop.Windows.GroupForViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Cashier.Desktop.Windows"
        xmlns:local1="clr-namespace:EduFlow.Cashier.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="GroupForViewWindow"
        Height="600"
        Width="1024"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded">
    <Grid Margin="10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Guruh malumotlari"
                   FontFamily="Jetbrains Mono"
                   FontSize="22"
                   FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal"
                        Width="90"
                        HorizontalAlignment="Right">
                <RadioButton x:Name="MinButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ChevronDown"
                             ToolTip="Yashirish"
                             Click="MinButton_Click"/>
                <StackPanel VerticalAlignment="Center">
                    <RadioButton x:Name="NormalButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowCollapse"
                                 ToolTip="Oddiy holat"
                                 Visibility="Collapsed"
                                 Click="NormalButton_Click"/>

                    <RadioButton x:Name="MaxButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowExpand"
                                 ToolTip="Kattalashtirish"
                                 Click="MaxButton_Click"/>
                </StackPanel>

                <RadioButton x:Name="CloseBtn"
                             Style="{DynamicResource StateButton}"
                             Tag="Close"
                             ToolTip="Yopish"
                             Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Grid Height="50">
                    <TextBlock Text="Nomi: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="nameTxt"
                               Text="..."
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="O'qituvchi: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="teacherNameTxt"
                               Text="..."
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Holati: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="statusTxt"
                               Text="Faol"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Joriy oydagi to'lovlar: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock Text="0"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Height="50">
                    <TextBlock Text="Boshlangan sana: "
                               FontSize="18"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>

                    <TextBlock x:Name="statedDateTxt"
                               Text="00.00.00"
                               FontSize="14"
                               FontFamily="JetBrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <Grid Grid.Column="1"
                  Margin="10 0 0 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="O'quvchilar soni: "
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="studentCountTbc"
                               Text="0"
                               FontSize="14"
                               FontFamily="Jetbrains Mono"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               Margin="5 0 20 0"/>

                    <TextBlock Text="Darslar soni: "
                                FontSize="14"
                                FontFamily="Jetbrains Mono"
                                FontWeight="SemiBold"
                                VerticalAlignment="Center"/>

                    <TextBlock x:Name="lessonCountTbc"
                                Text="0"
                                FontSize="14"
                                FontFamily="Jetbrains Mono"
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                Margin="5 0 20 0"/>
                </StackPanel>

                <Border Grid.Row="1"
                        CornerRadius="5"
                        BorderBrush="Gray"
                        BorderThickness="1">
                    <Grid Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                           Text="No"
                                           FontSize="14"
                                           FontFamily="Jetbrains Mono"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1"
                                           Text="FISH"
                                           FontSize="14"
                                           FontFamily="Jetbrains Mono"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <TextBlock Text="Darslar"
                                           FontSize="14"
                                           FontFamily="Jetbrains Mono"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="1"
                                  Margin="0 5">
                                <ScrollViewer>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <local1:Loader x:Name="studentLoader"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="Collapsed"/>

                                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                                  VerticalScrollBarVisibility="Disabled"
                                                  Margin="5 3">
                                                <StackPanel x:Name="stStudents"/>
                                            </ScrollViewer>

                                            <TextBlock x:Name="emptyDataForStudent"
                                                   Text="O'quvchilar topilmadi!"
                                                   FontSize="14"
                                                   FontFamily="Jetbrains Mono"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Visibility="Collapsed"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <local1:Loader x:Name="lessonLoader"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="Collapsed"/>

                                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                                          VerticalScrollBarVisibility="Disabled"
                                                          Margin="5 3">
                                                <StackPanel x:Name="stLessons"
                                                            Orientation="Horizontal"/>
                                            </ScrollViewer>

                                            <TextBlock x:Name="emptyDataForLesson"
                                                       Text="Darslar topilmadi!"
                                                       FontSize="14"
                                                       FontFamily="Jetbrains Mono"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="Collapsed"/>
                                        </Grid>
                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
