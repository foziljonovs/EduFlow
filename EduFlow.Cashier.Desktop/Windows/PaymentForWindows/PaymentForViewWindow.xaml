<Window x:Class="EduFlow.Cashier.Desktop.Windows.PaymentForWindows.PaymentForViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Cashier.Desktop.Windows.PaymentForWindows"
        mc:Ignorable="d"
        Title="PaymentForViewWindow"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Height="500"
        Width="500"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="To'lovni ko'rish"
                       FontSize="22"
                       FontFamily="Jetbrains Mono"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10 0 0 0"/>

            <RadioButton x:Name="closeBtn"
                         Style="{DynamicResource StateButton}"
                         Tag="close"
                         HorizontalAlignment="Right"
                         Click="closeBtn_Click"/>
        </Grid>

        <StackPanel Grid.Row="1"
                    Margin="10 0"
                    VerticalAlignment="Center">
            <Grid Height="50">
                <TextBlock Text="To'lov raqami: "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbReceiptNumber"
                           Text="5E058A12-FBDD-4952-B565-650FBFD922BD"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>

            <Grid Height="50">
                <TextBlock Text="O'quvchi ismi: "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbStudentName"
                           Text="Palonchi Pistonchiyev"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>    
            </Grid>

            <Grid Height="50">
                <TextBlock Text="Summa: "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbPrice"
                           Text="0"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>

            <Grid Height="50">
                <TextBlock Text="Chegirma: "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbDiscountPrice"
                           Text="0"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>

            <Grid Height="50">
                <TextBlock Text="Guruh : "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbGroupName"
                           Text="Palonchi Pistonchiyev"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>

            <Grid Height="50">
                <TextBlock Text="To'lov turi: "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbPaymentType"
                           Text="Naqt"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>

            <Grid Height="50">
                <TextBlock Text="To'lov holati: "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbPaymentStatus"
                           Text="Kutilmoqda"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>

            <Grid Height="50">
                <TextBlock Text="To'lov sanasi: "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbPaymentDate"
                           Text="08.07.2025"
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>

            <Grid Height="50">
                <TextBlock Text="Eslatma: "
                           FontSize="18"
                           FontFamily="Jetbrains Mono"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="tbNotes"
                           Text="..."
                           FontSize="14"
                           FontFamily="Jetbrains Mono"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
