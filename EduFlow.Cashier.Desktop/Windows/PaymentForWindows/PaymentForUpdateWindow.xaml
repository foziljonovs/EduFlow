<Window x:Class="EduFlow.Cashier.Desktop.Windows.PaymentForWindows.PaymentForUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduFlow.Cashier.Desktop.Windows.PaymentForWindows" xmlns:local1="clr-namespace:EduFlow.Cashier.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="PaymentForUpdateWindow" 
        Height="550"
        Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="To'lovni o'zgartirish"
                       FontSize="18"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="10 0"/>

            <StackPanel Orientation="Horizontal"
                        Margin="10 0"
                        Width="90"
                        HorizontalAlignment="Right">
                <RadioButton x:Name="MinButton"
                             Style="{DynamicResource StateButton}"
                             Tag="ChevronDown"
                             ToolTip="Yashirish"
                             Click="MinButton_Click"/>

                <StackPanel VerticalAlignment="Center">
                    <RadioButton x:Name="NormalButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowCollapse"
                                 ToolTip="Oddiy holat"
                                 Visibility="Collapsed"
                                 Click="NormalButton_Click"/>
                    <RadioButton x:Name="MaxButton"
                                 Style="{DynamicResource StateButton}"
                                 Tag="ArrowExpand"
                                 ToolTip="Kattalashtirish"
                                 Click="MaxButton_Click"/>
                </StackPanel>

                <RadioButton x:Name="CloseBtn"
                             Style="{DynamicResource StateButton}"
                             Tag="Close"
                             ToolTip="Yopish"
                             Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Margin="0 5">
                <ComboBox x:Name="teacherComboBox"
                          Height="40"
                          FontSize="18"
                          FontFamily="Jetbrains Mono"
                          FontWeight="SemiBold"
                          Margin="5 0 5 5"
                          VerticalContentAlignment="Center"
                          ToolTip="O'qituvchi tanlang"
                          SelectionChanged="teacherComboBox_SelectionChanged"/>

                <ComboBox x:Name="paymentTypeComboBox"
                            Height="40"
                            FontSize="18"
                            FontFamily="Jetbrains Mono"
                            FontWeight="SemiBold"
                            VerticalContentAlignment="Center"
                            Margin="5 10">
                    <ComboBoxItem Content="To'lov turini tanlang" IsSelected="True" IsEnabled="False"/>
                    <ComboBoxItem Content="Naqt" Tag="0"/>
                    <ComboBoxItem Content="Plastik" Tag="1"/>
                    <ComboBoxItem Content="O'tqazma" Tag="2"/>
                    <ComboBoxItem Content="Nasiya" Tag="3"/>
                    <ComboBoxItem Content="Boshqa" Tag="4"/>
                </ComboBox>

                <TextBlock Text="Summa"
                            FontSize="13"
                            FontFamily="Jetbrains Mono"
                            FontWeight="Medium"
                            Foreground="Gray"
                            Margin="10 5"/>

                <TextBox x:Name="AmountTxt"
                         Text="0"
                         Style="{DynamicResource CustomTextBoxStyle}"
                         Margin="5 0 5 10"/>

                <TextBlock Text="Chegirma summasi"
                           FontSize="13"
                           FontFamily="Jetbrains Mono"
                           FontWeight="Medium"
                           Foreground="Gray"
                           Margin="10 5"/>

                <TextBox x:Name="DiscountTxt"
                         Text="0"
                         Style="{DynamicResource CustomTextBoxStyle}"
                         Margin="5 0 5 10"/>

                <TextBlock Text="Izoh"
                           FontSize="13"
                           FontFamily="Jetbrains Mono"
                           FontWeight="Medium"
                           Foreground="Gray"
                           Margin="10 5"/>

                <Border Height="120"
                        BorderThickness="1"
                        BorderBrush="#FFCCCCCC"
                        CornerRadius="10"
                        Margin="5 0">
                    <TextBox x:Name="NotesTxt"
                             Margin="5"
                             BorderThickness="0"
                             FontSize="18"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"
                             TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <Grid Grid.Column="1"
                    Margin="5 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Margin="0 5"
                        CornerRadius="5"
                        BorderThickness="1"
                        BorderBrush="Gray">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Margin="8 0 26 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Nomi"
                                       FontSize="13"
                                       FontFamily="Jetbrains Mono"
                                       FontWeight="ExtraBold"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1"
                                       Text="Darslar"
                                       FontSize="13"
                                       FontFamily="Jetbrains Mono"
                                       FontWeight="ExtraBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="2"
                                       Text="Boshlangan sana"
                                       FontSize="13"
                                       FontFamily="Jetbrains Mono"
                                       FontWeight="ExtraBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <local1:Loader x:Name="groupLoader"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"/>

                            <ScrollViewer>
                                <StackPanel x:Name="stGroups"/>
                            </ScrollViewer>

                            <TextBlock x:Name="emptyDataForGroups"
                                       Text="Guruhlar topilmadi!"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontFamily="Jetbrains Mono"
                                       FontWeight="SemiBold"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        Margin="0 5"
                        CornerRadius="5"
                        BorderThickness="1"
                        BorderBrush="Gray">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Margin="8 0 26 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Ism"
                                       FontFamily="Jetbrains Mono"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1"
                                        Text="Telefon raqam"
                                        FontFamily="Jetbrains Mono"
                                        FontSize="13"
                                        FontWeight="ExtraBold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="2"
                                        Text="To'lovlar"
                                        FontFamily="Jetbrains Mono"
                                        FontSize="13"
                                        FontWeight="ExtraBold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <local1:Loader x:Name="studentLoader"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed"/>

                            <ScrollViewer>
                                <StackPanel x:Name="stStudents"/>
                            </ScrollViewer>

                            <TextBlock x:Name="emptyDataForStudents"
                                        Text="O'quvchilar topilmadi!"
                                        FontSize="14"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Jetbrains Mono"
                                        FontWeight="SemiBold"
                                        Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

    </Grid>
</Window>
