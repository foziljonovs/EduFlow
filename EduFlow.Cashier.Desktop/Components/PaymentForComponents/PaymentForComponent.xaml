<UserControl x:Class="EduFlow.Cashier.Desktop.Components.PaymentForComponents.PaymentForComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduFlow.Cashier.Desktop.Components.PaymentForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border BorderThickness="1"
            BorderBrush="Gray"
            Margin="3 5 3 0"
            CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="tbNumber"
                       Text="1"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock x:Name="tbReceiptNumber"
                       Grid.Column="1"
                       Text="86794010-6564-4127-92ED-6210EB6325F0"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock x:Name="tbAmount"
                       Grid.Column="2"
                       Text="400000"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock x:Name="tbDiscount"
                       Grid.Column="3"
                       Text="0"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock x:Name="tbStatus"
                       Grid.Column="4"
                       Text="Yakunlangan"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock x:Name="tbType"
                       Grid.Column="5"
                       Text="Naqt"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock x:Name="tbPaymentDate"
                       Grid.Column="6"
                       Text="16.06.2025 14:00"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="7"
                        Orientation="Horizontal">
                <Button x:Name="viewBtn"
                        Style="{DynamicResource CrudButton}"
                        Tag="eye"
                        Background="DeepSkyBlue"
                        ToolTip="To'lovni ko'rish"
                        Click="viewBtn_Click"/>

                <Button x:Name="editBtn"
                        Style="{DynamicResource CrudButton}"
                        Tag="pencil"
                        Background="Gold"
                        ToolTip="To'lovni tahrirlash"
                        Click="editBtn_Click"/>

                <Button x:Name="returnBtn"
                        Style="{DynamicResource CrudButton}"
                        Tag="creditCardRefund"
                        Background="Tomato"
                        ToolTip="To'lovni qaytarish"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
