<UserControl x:Class="EduFlow.Cashier.Desktop.Components.MainForComponents.MainForGroupComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduFlow.Cashier.Desktop.Components.MainForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border Margin="3 5 3 0"
            BorderThickness="1"
            BorderBrush="Gray"
            CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="tbNumber"
                       Text="1"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       x:Name="tbName"
                       Text="Foundation 11.06"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="2"
                       x:Name="tbStudentCount"
                       Text="11"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                       x:Name="tbLessonCount"
                       Text="7"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="4"
                       x:Name="tbStartedDate"
                       Text="11-06-2025"
                       FontSize="14"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="5"
                    x:Name="ViewButton"
                    Style="{DynamicResource CrudButton}"
                    Tag="Eye"
                    Background="DeepSkyBlue"
                    ToolTip="Guruhni ko'rish"/>
        </Grid>
    </Border>
</UserControl>
